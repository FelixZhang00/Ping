<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageButton
        android:id="@+id/list_item_refresh_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_navigation_refresh_primary"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:layout_weight="0"
        android:background="@drawable/ripple_accent"
        android:hapticFeedbackEnabled="true"
        android:scaleType="centerCrop"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <ProgressBar
        android:id="@+id/progress_spinner"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/list_item_url"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/list_item_time_last_checked"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:maxLines="1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_status"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:layout_margin="20dp"/>

</LinearLayout>