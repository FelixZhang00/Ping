<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Common">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Common elements between base and v21 AppTheme. -->
    <style name="AppTheme.Common" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:itemTextAppearance">@style/OverflowItemStyle</item>
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:alertDialogTheme">@style/AppTheme.DialogTheme</item>
    </style>

    <!-- Set the Overflow menu's text colour. -->
    <style name="OverflowItemStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Set the colours of all the popup dialog menus. -->
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
